<p style="color: green"><%= notice %></p>

<h1>Invoices</h1>

<table class="table table-hover" id="invoices">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <%= render invoice %>
    <% end %>
</tbody>
</table>

<%= link_to "New invoice", new_invoice_path %>
